<%- include('partials/header', { title: 'Painel de Administração', user: user }) %>

<div class="admin-dashboard">
    <div class="admin-header">
        <h1>Painel de Administração</h1>
        <p>Bem-vindo, <%= user.username %></p>
    </div>

    <div class="admin-grid">
        <a href="/admin/contacts" class="admin-card">
            <div class="admin-card-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="admin-card-content">
                <h3>Mensagens de Contato</h3>
                <p>Gerencie as mensagens recebidas pelo formulário de contato</p>
            </div>
            <div class="admin-card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>

        <a href="/admin/users" class="admin-card">
            <div class="admin-card-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="admin-card-content">
                <h3>Gerenciar Usuários</h3>
                <p>Visualize e gerencie os usuários do sistema</p>
            </div>
            <div class="admin-card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>

        <a href="/admin/settings" class="admin-card">
            <div class="admin-card-icon">
                <i class="fas fa-cog"></i>
            </div>
            <div class="admin-card-content">
                <h3>Configurações</h3>
                <p>Configurações gerais do sistema</p>
            </div>
            <div class="admin-card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>

        <a href="/admin/logs" class="admin-card">
            <div class="admin-card-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="admin-card-content">
                <h3>Logs do Sistema</h3>
                <p>Visualize os logs e atividades do sistema</p>
            </div>
            <div class="admin-card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>
    </div>
</div>

<style>
    .admin-dashboard {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .admin-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .admin-header h1 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 2.5rem;
    }

    .admin-header p {
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    .admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .admin-card {
        background: rgba(10, 25, 47, 0.7);
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        text-decoration: none;
        color: var(--text-light);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .admin-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        border-color: var(--primary-color);
    }

    .admin-card-icon {
        width: 50px;
        height: 50px;
        background: rgba(100, 175, 255, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        font-size: 1.5rem;
        color: var(--primary-color);
    }

    .admin-card-content {
        flex: 1;
    }

    .admin-card h3 {
        margin: 0 0 0.5rem 0;
        color: var(--text-light);
        font-size: 1.1rem;
    }

    .admin-card p {
        margin: 0;
        color: var(--text-muted);
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .admin-card-arrow {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-left: 1rem;
        opacity: 0.7;
        transition: all 0.3s ease;
    }

    .admin-card:hover .admin-card-arrow {
        transform: translateX(5px);
        opacity: 1;
    }

    @media (max-width: 768px) {
        .admin-grid {
            grid-template-columns: 1fr;
        }
        
        .admin-card {
            padding: 1.25rem;
        }
    }
</style>

<%- include('partials/footer') %>
