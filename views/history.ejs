<%- include('partials/header', { title: 'Histórico de Testes - Ciber Crow' }) %>

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-history"></i> Histórico de Testes</h1>
    
    <div class="controls mb-4">
        <button id="loadHistory" class="btn btn-primary me-2">
            <i class="fas fa-sync"></i> Carregar Histórico
        </button>
        <select id="limitSelect" class="form-select d-inline-block w-auto">
            <option value="5">Últimos 5 testes</option>
            <option value="10" selected>Últimos 10 testes</option>
            <option value="20">Últimos 20 testes</option>
            <option value="50">Últimos 50 testes</option>
            <option value="0">Todos os testes</option>
        </select>
    </div>

    <div class="row g-3 mb-4" id="statsContainer">
        <!-- Stats will be loaded here -->
    </div>

    <div id="loading" class="text-center my-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
        <p class="mt-2">Carregando histórico...</p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Data</th>
                    <th>Download (Mbps)</th>
                    <th>Upload (Mbps)</th>
                    <th>Ping (ms)</th>
                    <th>Jitter (ms)</th>
                    <th>Servidor</th>
                </tr>
            </thead>
            <tbody id="historyBody">
                <!-- Data will be loaded here -->
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %>

<!-- JavaScript -->
<script src="/js/history.js"></script>
